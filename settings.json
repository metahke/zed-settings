// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "chat_panel": {
    "button": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark"
  },
  "soft_wrap": "editor_width",
  "wrap_guides": [80],
  "show_wrap_guides": true,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "features": {
    "copilot": false,
    "inline_completion_provider": "none"
  },
  "collaboration_panel": {
    "button": false
  },
  "assistant": {
    "enabled": false,
    "version": "2",
    "button": false
  },
  "assistant_v2": {
    "enabled": false
  }
}
